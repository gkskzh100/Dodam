<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jm.dodamdodam.dodamdodam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activity.WriteActivity"
            android:label="@string/title_activity_write"></activity>
        <activity
            android:name=".controller.activity.WordActivity"
            android:label="@string/title_activity_word"></activity>
        <activity
            android:name=".controller.activity.ViewActivity"
            android:label="@string/title_activity_view"></activity>

        <service android:name=".socketio.SocketService" />

        <activity android:name=".controller.activity.SummaryActivity"></activity>
    </application>

</manifest>
